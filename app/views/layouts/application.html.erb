<!DOCTYPE html>
<html>
<head>
  <title>Matthew Hershman</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <%= csrf_meta_tags %>
</head>
<nav class="black">
    <div class="container">
      <div class="nav-wrapper">
            <a class="brand-logo  thin" href="/">Matthew Hershman</a>
        </div>
      </div>
</nav>
<% if current_admin? %>
<nav class="grey darken-5">
    <div class="container">
      <div class="nav-wrapper">
            <a class="brand-logo thin black-text" href="/">Administrator</a>
        <ul class="right hide-on-med-and-down">
          <li><%=link_to "Dashboard", admin_dashboard_path, class: "black-text" %></li>
          <li><%=link_to "All Resumes", admin_resumes_path, class: "black-text" %></li>
          <li><%= link_to "Logout", logout_path, method: :delete,class: "black-text" %></li>
        </ul>
        </div>
      </div>
<% end %>
</nav>

<br><br>
<body class="application-body">
  <div class="container">
    <div class="card" id="body-container">
    <div class="card-content">
    <%= yield %>
    </div>
  </div>
</div>

<footer class="page-footer transparent">
        <span class="black-text"><em>Copyright &copy; Matthew Hershman All Rights Reserved</em></span>
</footer>
</body>


</html>
